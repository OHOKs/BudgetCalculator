<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="BudgetCalculator" Height="450" Width="800"
        ResizeMode="NoResize">
    <Grid Width="780" HorizontalAlignment="Center" Margin="0,10,0,17">

        <ListView Height="321" BorderThickness="1,1,1,1" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Top" HorizontalAlignment="Center" Width="760" Margin="0,46,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header ="ID" Width="auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header ="Date" Width="auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header ="Category" Width="auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header ="Description" Width="auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header ="Amount" Width="auto"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
